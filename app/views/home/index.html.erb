<div class = 'grid grid-cols-1'>
  <div class="flex items-center justify-center py-4 md:py-8 flex-wrap">
    <% @tags.each do |tag| %>
      <%= button_to tag.name, home_search_results_path(tag.name), name: 'tag_search', class: "text-gray-900 border border-white hover:text-blue-700 hover:border-blue-700 dark:border-blue-900 dark:bg-blue-900 dark:hover:border-blue-700 bg-white focus:ring-4 focus:outline-none focus:ring-gray-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:text-white dark:focus:ring-gray-800" %>
    <% end %>
  </div>

<div class="bg-white dark:bg-gray-800 dark:text-white p-8 rounded-lg flex justify-between items-center text-center rounded-lg">
  <div class="flex flex-col items-center">
    <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
    <div class="text-lg font-medium mt-2"><%= t('user_friendly') %></div>
    <div class="text-sm text-gray-500 dark:text-gray-400"><%= t('user_friendly_text') %></div>
  </div>
  <div class="flex flex-col items-center">
    <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
    <div class="text-lg font-medium mt-2"><%= t('showcase') %></div>
    <div class="text-sm text-gray-500 dark:text-gray-400"><%= t('showcase_text') %></div>
  </div>
  <div class="flex flex-col items-center">
    <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"/></svg>
    <div class="text-lg font-medium mt-2"><%= t('community') %></div>
    <div class="text-sm text-gray-500 dark:text-gray-400"><%= t('community_text') %></div>
  </div>
</div>

<div class="bg-white dark:bg-gray-800 grid grid-cols-5 gap-4 md:grid-cols-5 p-4 mt-7 rounded-t-lg" id="itemsGallery" >
  <div class="col-span-5 md:col-span-2">
    <label class="block text-lg font-medium text-gray-700 dark:text-white"><%= t('items') %></label>
  </div>
</div>
<div class="bg-white dark:bg-gray-800 grid grid-cols-2 gap-4 md:grid-cols-4 p-4 border border-black dark:border-gray-700" id = 'itemsGallery'>
    <% @items.each_with_index do |item,index| %>
    <div class = 'bg-white dark:bg-gray-800 p-4 text-center dark:text-white border border-black dark:border-gray-700'>
        <div class="mx-auto w-full flex justify-center">
            <img class="mx-auto w-1/2 h-1/2 max-w-xs max-h-xs rounded-lg" src="<%= item.image_url.nil? ? image_path('item') : item.image_url %>" alt="">
        </div>
        <br>
        <%=link_to item.name, home_view_item_path(item.id), class: "text-black hover:text-blue-600 dark:hover:text-blue-600 font-bold py-2 px-4 rounded dark:text-white" %>
        <br>
        <%= @item_Owners[index] %>
    </div>
    <% end %>
</div>
<div class="rtl:mr-3 bg-white dark:bg-gray-800 p-4 rounded-b-lg">
  <%= link_to home_items_listing_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
    <%= t('see_all') %>
    <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg>
  <% end %>
</div>


