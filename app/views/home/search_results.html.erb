<div class = 'grid grid-cols-1'> 

<div class="flex items-center justify-center py-4 md:py-8 flex-wrap">
    <% @tags.each do |tag| %>
      <%= button_to tag.name, home_search_results_path(tag.name), name: 'tag_search', class: "text-gray-900 border border-white hover:text-blue-700 hover:border-blue-700 dark:border-blue-900 dark:bg-blue-900 dark:hover:border-blue-700 bg-white focus:ring-4 focus:outline-none focus:ring-gray-300 rounded-full text-base font-medium px-5 py-2.5 text-center me-3 mb-3 dark:text-white dark:focus:ring-gray-800" %>
    <% end %>
</div>

<div class = 'bg-white dark:bg-gray-800 p-4 mt-7 rounded'>
<p class = "text-2xl text-gray-900 dark:text-white"><strong><%= t('items') %></strong></p>
<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @items.each_with_index do |item,index| %>
        <div class = 'bg-white dark:bg-gray-800 p-4 text-center dark:text-white'>
            <div class="mx-auto w-full flex justify-center">
                <img class="mx-auto w-1/2 h-1/2 max-w-xs max-h-xs rounded-lg" src="<%= item.image_url.nil? ? image_path('item') : item.image_url %>" alt="">
            </div>
            <br>
            <%=link_to item.name, home_view_item_path(item.id), class: "text-black hover:text-blue-600 dark:hover:text-blue-600 font-bold py-2 px-4 rounded dark:text-white" %>
            <br>
            <%= @Owners[index] %>
        </div>
    <% end %>
</div>
</div>

<div class = 'bg-white dark:bg-gray-800 p-4 mt-7 rounded'>
<p class = "text-2xl text-gray-900 dark:text-white"><strong><%= t('collections') %></strong></p>
<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @collections.each_with_index do |collection,index| %>
        <div class = 'bg-white dark:bg-gray-800 p-4 text-center dark:text-white'>
            <div class="mx-auto w-full flex justify-center">
                <img class="mx-auto w-1/2 h-1/2 max-w-xs max-h-xs rounded-lg" src="<%= collection.image_url.nil? ? image_path('collection') : collection.image_url %>" alt="">
            </div>
            <br>
            <%=link_to collection.name, home_view_collection_path(collection.id), class: "text-black hover:text-blue-600 dark:hover:text-blue-600 font-bold py-2 px-4 rounded dark:text-white" %>
            <br>
            <%= @Owners_collections[index] %>
        </div>
    <% end %>
</div>
</div>
</div>